{
  "builders": [
    {
      "boot_command": [
        "<esc><wait><esc><wait><f6><wait><esc><wait>",
        "<bs><bs><bs><bs><bs>",
        "autoinstall ds=nocloud-net;s=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ ",
        "--- <enter>"
      ],
      "boot_wait": "5s",
      "cpus": "{{ user `vb_cpus` }}",
      "disk_size": "{{ user `vb_disk_size` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Ubuntu_64",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{ user `checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_urls": [
        "iso/{{ user `iso_name` }}",
        "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}"
      ],
      "memory": "{{ user `vb_memory` }}",
      "output_directory": "builds/virtualbox/aracpac-{{ user `image_name` }}-v{{ user `version` }}",
      "sata_port_count": 5,
      "shutdown_command": "/usr/sbin/shutdown -P now",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "aracpac-{{ user `image_name` }}-v{{ user `version` }}"
    }
  ],
  "post-processors": [
    {
      "compression_level": "8",
      "output": "builds/{{ user `image_name` }}-v{{ user `version` }}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "expect_disconnect": true,
      "only": [
        "virtualbox-iso"
      ],
      "scripts": [
        "scripts/virtualbox.sh"
      ],
      "type": "shell"
    },
    {
      "expect_disconnect": true,
      "scripts": [
        "scripts/update.sh",
        "scripts/ansible.sh",
        "scripts/sshd.sh",
        "scripts/networking.sh"
      ],
      "type": "shell"
    },
    {
      "clean_staging_directory": true,
      "extra_arguments": [
        "--extra-vars",
        "'{}'"
      ],
      "galaxy_file": "ansible/requirements.yml",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/main.yml",
      "type": "ansible-local"
    },
    {
      "expect_disconnect": true,
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "checksum_type": "sha256",
    "image_name": "ubuntu20",
    "iso_checksum": "d1f2bf834bbe9bb43faf16f9be992a6f3935e65be0edece1dee2aa6eb1767423",
    "iso_name": "ubuntu-20.04.2-live-server-amd64.iso",
    "mirror": "http://releases.ubuntu.com",
    "mirror_directory": "20.04",
    "vb_cpus": "8",
    "vb_disk_size": "512000",
    "vb_memory": "8192",
    "version": "1.3.0"
  }
}

