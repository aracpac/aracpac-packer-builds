{
  "builders": [
    {
      "boot_command": [
        "<up><wait><tab>",
        "text ks=http://{{.HTTPIP}}:{{.HTTPPort}}/ks.cfg",
        "<enter><wait>"
      ],
      "boot_wait": "5s",
      "cpus": "{{ user `vb_cpus` }}",
      "disk_size": "{{ user `vb_disk_size` }}",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "RedHat_64",
      "hard_drive_interface": "sata",
      "headless": true,
      "http_directory": "http",
      "iso_checksum": "{{ user `checksum_type` }}:{{ user `iso_checksum` }}",
      "iso_urls": [
        "iso/{{ user `iso_name` }}",
        "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}"
      ],
      "memory": "{{ user `vb_memory` }}",
      "output_directory": "builds/virtualbox/aracpac-{{ user `image_name` }}-v{{ user `version` }}",
      "sata_port_count": 5,
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_timeout": "10000s",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "aracpac-{{ user `image_name` }}-v{{ user `version` }}"
    }
  ],
  "post-processors": [
    {
      "compression_level": "8",
      "output": "builds/{{ user `image_name` }}-v{{ user `version` }}.box",
      "type": "vagrant"
    }
  ],
  "provisioners": [
    {
      "expect_disconnect": true,
      "only": [
        "virtualbox-iso"
      ],
      "scripts": [
        "scripts/virtualbox.sh"
      ],
      "type": "shell"
    },
    {
      "expect_disconnect": true,
      "scripts": [
        "scripts/update.sh",
        "scripts/ansible.sh",
        "scripts/sshd.sh",
        "scripts/networking.sh"
      ],
      "type": "shell"
    },
    {
      "clean_staging_directory": true,
      "extra_arguments": [
        "--extra-vars",
        "'{}'"
      ],
      "galaxy_file": "ansible/requirements.yml",
      "playbook_dir": "ansible",
      "playbook_file": "ansible/main.yml",
      "type": "ansible-local"
    },
    {
      "expect_disconnect": true,
      "scripts": [
        "scripts/cleanup.sh",
        "scripts/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "checksum_type": "sha256",
    "image_name": "centos8",
    "iso_checksum": "727d5f9deb5d8301cb30fb4eb7ddf8704cd0fbdc4ef632bb0ee5a32e3cf35fc3",
    "iso_name": "CentOS-Stream-8-x86_64-20210907-dvd1.iso",
    "mirror": "http://mirrors.kernel.org/centos",
    "mirror_directory": "8-stream/isos/x86_64",
    "vb_cpus": "12",
    "vb_disk_size": "512000",
    "vb_memory": "8192",
    "version": "1.4.0"
  }
}

